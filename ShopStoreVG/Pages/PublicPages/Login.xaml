<Page x:Class="ShopStoreVG.Pages.PublicPages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopStoreVG.Pages.PublicPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1">


            <TextBlock TextWrapping="Wrap" Margin="10,20,10,10" Height="50" FontSize="25"><Run Language="ru-ru" Text="Авторизация"/></TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="10,10,10,10"><Run Language="ru-ru" Text="Логин"/></TextBlock>
            <TextBox x:Name="LoginInput" TextWrapping="Wrap"  Margin="10,10,10,10"/>
            <TextBlock TextWrapping="Wrap" Margin="10,20,10,10"><Run Language="ru-ru" Text="Пароль"/></TextBlock>
            <PasswordBox x:Name ="PSWInput" Margin="10,10,10,10"/>
            <Button Content="Войти" Width="90" Margin="10,10,10,10" Click="Button_Click"/>


        </StackPanel>







    </Grid>
</Page>
