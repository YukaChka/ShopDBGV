<Page x:Class="ShopStoreVG.Pages.AdminPages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopStoreVG.Pages.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button BorderBrush="Black" Background="#B39F7A" Content="Сотрудники" Grid.Column="0" Margin="200,20,200,20" FontSize="30" Click="Button_Click"/>
        <Button BorderBrush="Black" Background="#B39F7A" Content="Товары" Grid.Column="1"  Margin="200,20,200,20" Grid.Row="1" FontSize="30"
                Click="Button_Click_Product"
                />
        <Button BorderBrush="Black" Background="#B39F7A" Content="Клиенты" Grid.Column="2" Margin="200,20,200,20" Grid.Row="2" FontSize="30" />
        <Button BorderBrush="Black" Background="#B39F7A" Content="Отчёты" Grid.Column="3" Margin="200,20,200,20" Grid.Row="3" FontSize="30"/>

    </Grid>
</Page>
